# Скопируйте этот файл в .env и заполните своими данными

# Telegram Bot Token (получить у @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# ID вашего телеграм-аккаунта (получить у @userinfobot)
# Только этот пользователь сможет управлять ботом
OWNER_CHAT_ID=your_telegram_id_here

# База данных (опционально)
# SQLite (по умолчанию): sqlite:///data/tradebot.db
# PostgreSQL: postgresql://user:password@localhost:5432/tradebot
# DATABASE_URL=sqlite:///data/tradebot.db

# Bybit Trading API (Spot)
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here
BYBIT_TESTNET=false  # true для тестовой сети

